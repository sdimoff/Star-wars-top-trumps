<div class="row">
  <div class="col offset-m4"></div>
  <div class="col m4">
    <label>Select resource</label>
    <select class="browser-default" onchange={{action 'setResource'}}>
      <option default=default value="person">People</option>
      <option value="starship">Starships</option>
    </select>
  </div>
</div>
<div class="row ">
  <div class="col offset-m1"></div>
  <h3 class="col m4 center-align">
    {{playerOneScore}}
  </h3>
  <div class="col m2 center-align">
    <button class='waves-effect waves-light btn' disabled={{disabled}} onclick={{action 'play'}}>MATCH AGAIN!</button>
  </div>
  <h3 class="col m4 center-align">
    {{playerTwoScore}}
  </h3>
</div>
<div class="row">
  <div class="col offset-m1"></div>
  {{#each players as |player|}}
    <div class="col m5">
      {{#hero-card
        player=player
        vsPerson=vsPerson}}
        {{#if vsPerson}}
          {{description-person player=player}}
        {{else}}
          {{description-starship player=player}}
        {{/if}}
      {{/hero-card}}
    </div>
  {{/each}}
</div>


<div class="counter">{{player.winsNum}}</div>
<div class="row">
  <div class="col s12">
    <div class="card">
      {{#if false}}
      {{else}}
      {{/if}}
      <span class="card-title">{{player.name}}</span>
      <div class="card-image">
        {{#if peopleMatch}}
          <img src="./assets/images/greedo.jpg">
        {{else}}
          <img src="./assets/images/starship.jpg">
        {{/if}}
      </div>
      <div class="card-content">
        {{#if peopleMatch}}
          <p>
            {{player.name}} is a {{player.homeworld.name}}an native.
            He's starred in numerous movies, amongst which:
            {{#each player.films as |film|}}
              "{{film.title}}",
            {{/each}} besides, he likes rides from
            {{#each player.vehicles as |vehicle|}}
              "{{vehicle.manufacturer}}",
            {{/each}}
          </p>
          <table>
            <tbody>
            <tr>
              <td>Mass</td>
              <td>{{player.mass}}</td>
            </tr>
            <tr>
              <td>Height</td>
              <td>{{player.height}}</td>
            </tr>
            </tbody>
          </table>
        {{else}}
          <p>
            {{starship.name}}
          </p>
          <table>
            <tbody>
            <tr>
              <td>Strength</td>
              <td>{{player.mass}}</td>
            </tr>
            <tr>
              <td>Height</td>
              <td>{{player.height}}</td>
            </tr>
            </tbody>
          </table>
        {{/if}}
      </div>
    </div>
  </div>
</div>
